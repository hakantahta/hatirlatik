<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hatirlatik" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Arkaplan renkleri -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        
        <!-- Özel renkler -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/dark_secondary_text</item>
        
        <!-- Kart renkleri -->
        <item name="cardBackgroundColor">@color/dark_surface</item>
        <item name="android:textColor">@color/white</item>
        
        <!-- Bileşen stilleri -->
        <item name="materialCardViewStyle">@style/Widget.Hatirlatik.CardView</item>
        <item name="textInputStyle">@style/Widget.Hatirlatik.TextInputLayout</item>
        <item name="materialButtonStyle">@style/Widget.Hatirlatik.Button</item>
        <item name="toolbarStyle">@style/Widget.Hatirlatik.Toolbar</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Hatirlatik.BottomSheetDialog</item>
        <item name="floatingActionButtonStyle">@style/Widget.Hatirlatik.FloatingActionButton.Dark</item>
    </style>
    
    <!-- Özel Bileşen Stilleri -->
    <style name="Widget.Hatirlatik.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextAppearance">@style/TextAppearance.Hatirlatik.Toolbar.Title</item>
        <item name="android:elevation">0dp</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>
    
    <style name="TextAppearance.Hatirlatik.Toolbar.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
    
    <!-- FloatingActionButton Karanlık Tema Stili -->
    <style name="Widget.Hatirlatik.FloatingActionButton.Dark" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/accent</item>
        <item name="tint">@color/dark_background</item>
        <item name="rippleColor">@color/accent_light</item>
        <item name="elevation">6dp</item>
    </style>
    
    <!-- Takvim FloatingActionButton Karanlık Tema Stili -->
    <style name="Widget.Hatirlatik.FloatingActionButton.Calendar.Dark" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/tertiary</item>
        <item name="tint">@color/dark_background</item>
        <item name="rippleColor">@color/quaternary</item>
        <item name="elevation">6dp</item>
    </style>
</resources>