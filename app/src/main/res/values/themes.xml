<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Hatirlatik" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <!-- Light Teması -->
    <style name="Theme.Hatirlatik" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Özel renkler -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        
        <!-- Bileşen stilleri -->
        <item name="materialCardViewStyle">@style/Widget.Hatirlatik.CardView</item>
        <item name="textInputStyle">@style/Widget.Hatirlatik.TextInputLayout</item>
        <item name="materialButtonStyle">@style/Widget.Hatirlatik.Button</item>
        <item name="toolbarStyle">@style/Widget.Hatirlatik.Toolbar</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Hatirlatik.BottomSheetDialog</item>
        <item name="floatingActionButtonStyle">@style/Widget.Hatirlatik.FloatingActionButton</item>
    </style>

    <!-- Özel Bileşen Stilleri -->
    <style name="Widget.Hatirlatik.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Widget.Hatirlatik.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeColor">@color/accent</item>
        <item name="hintTextColor">@color/accent</item>
    </style>

    <style name="Widget.Hatirlatik.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">@color/accent</item>
    </style>

    <style name="Widget.Hatirlatik.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="Widget.Hatirlatik.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextAppearance">@style/TextAppearance.Hatirlatik.Toolbar.Title</item>
        <item name="android:elevation">0dp</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="TextAppearance.Hatirlatik.Toolbar.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ThemeOverlay.Hatirlatik.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Hatirlatik.BottomSheet</item>
    </style>

    <style name="Widget.Hatirlatik.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Hatirlatik.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.Hatirlatik.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Popup Menü Teması -->
    <style name="ThemeOverlay.Hatirlatik.Popup" parent="ThemeOverlay.Material3.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>
    
    <!-- FloatingActionButton Stili -->
    <style name="Widget.Hatirlatik.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/accent</item>
        <item name="tint">@color/white</item>
        <item name="rippleColor">@color/accent_light</item>
        <item name="elevation">6dp</item>
    </style>
    
    <!-- Takvim FloatingActionButton Stili -->
    <style name="Widget.Hatirlatik.FloatingActionButton.Calendar" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/tertiary</item>
        <item name="tint">@color/white</item>
        <item name="rippleColor">@color/quaternary</item>
        <item name="elevation">6dp</item>
    </style>
    
    <!-- Checkbox Stili -->
    <style name="Widget.Hatirlatik.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/accent</item>
    </style>
    
    <!-- Switch Stili -->
    <style name="Widget.Hatirlatik.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/accent</item>
        <item name="trackTint">@color/accent_light</item>
    </style>
</resources>